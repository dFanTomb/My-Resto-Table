<div class="bg-img" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)),
            url(<%= asset_path('top-view-food-banquet_resized.jpg')%>)">
</div>

<div class="restaurant">
  <h2 id="restaurant-name"><%= @restaurant.name %>'s Restaurant </h2>
  <p id="restaurant-address">Address: <%= @restaurant.address %></p>
  <p id="restaurant-city">City: <%= @restaurant.city %></p>
  <p id="restaurant-postal-code">Postal Code: <%= @restaurant.postal_code %></p>
  <p id="restaurant-rating">Rating: <%= @restaurant.rating %></p>
  <p id="restaurant-reviews"><strong>Reviews</strong></p>
  <ul class="reviews">
    <% @restaurant.reviews.each do |review| %>
      <li class="review-item">
        <%= review.content %>
        <%= link_to "Delete", review_path(review),
            data: {turbo_method: :delete, turbo_confirm: "Delete this review?"} %>
      </li>
    <% end %>
  </ul>
  <br>
  <div class="restaurant-buttons">
      <%= link_to "Back", :back %>
      <%= link_to "Edit", edit_restaurant_path %>
      <%= link_to "Add Review", new_restaurant_review_path(@restaurant) %>
      <%= link_to "Delete", restaurant_path(@restaurant),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <%= link_to "Restaurants", restaurants_path %>
      <%= link_to "Book a table", new_restaurant_booking_path(restaurant_id: @restaurant.id) %>
  </div>
</div>
